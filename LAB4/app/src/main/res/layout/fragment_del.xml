<!-- res/layout/fragment_del.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#B3FFB3"
              android:orientation="vertical">

    <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alatsi"
            android:text="by Kapitanov"
            android:textSize="14sp"
            android:gravity="right" android:textColor="#000000"/>

    <EditText
            android:id="@+id/noteIdEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:fontFamily="@font/alatsi"
            android:gravity="center"
            android:hint="Введите номер заметки для удаления" android:textColor="#000000"
            android:textColorHint="#000000" android:textColorLink="#000000" android:textStyle="bold"
            android:backgroundTint="#000000"/>

    <Button
            android:id="@+id/deleteButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:backgroundTint="#531CB5"
            android:fontFamily="@font/aleo_bold"
            android:text="Удалить"
            android:textSize="16sp" android:textColor="#FFFFFF"/>
</LinearLayout>
