<!-- res/layout/fragment_search_by_id.xml -->
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFF7F50">
    <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alatsi"
            android:text="by Beresten Denis"
            android:textSize="14sp"
            android:gravity="right" android:textColor="#000000"/>
    <EditText
            android:id="@+id/searchByIdEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите номер заметки"
            android:padding="8dp"
            android:layout_margin="8dp"/>

    <Button
            android:id="@+id/searchByIdButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Поиск"
            android:backgroundTint="#531CB5"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:textSize="16sp"/>

    <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FF00"/>
</LinearLayout>
